			<ID>com.sysprogs.stm8.stdperiph.l10</ID>
			<ClassID>com.sysprogs.stm8.stdperiph</ClassID>
			<ProjectFolderName>Peripherals</ProjectFolderName>
			<DefaultEnabled>true</DefaultEnabled>
			<CopyJobs>
				<CopyJob>
					<SourceFolder>$$BSPGEN:INPUT_DIR$$\STM8L10x_StdPeriph_Lib\Libraries\STM8L10x_StdPeriph_Driver</SourceFolder>
					<FilesToCopy>*</FilesToCopy>
					<ProjectInclusionMask>*.c;*.h;*.S;*.cpp</ProjectInclusionMask>
				</CopyJob>			
			</CopyJobs>
		</Framework>
	</AdditionalFrameworks>
	

</FamilyDefinition>
