<UserControl x:Class="ESP8266DebugPackage.GUI.ESPxxGDBStubSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ESP8266DebugPackage.GUI"
             xmlns:bspe="clr-namespace:BSPEngine;assembly=BSPEngine"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:coll="clr-namespace:System.Collections;assembly=mscorlib"
             mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate x:Key="AnnotatedItemTemplate">
            <TextBlock Text="{Binding Converter={x:Static local:Options.Converter}}" Margin="0"/>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType="TextBlock" BasedOn="{StaticResource ResourceKey={x:Type TextBlock}}">
                <Setter Property="Margin" Value="5"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            <Style TargetType="ComboBox" BasedOn="{StaticResource ResourceKey={x:Type ComboBox}}">
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            <Style TargetType="TextBox" BasedOn="{StaticResource ResourceKey={x:Type TextBox}}">
                <Setter Property="Padding" Value="0 1 0 1"/>
            </Style>

            <Style TargetType="ListBox" BasedOn="{StaticResource ResourceKey={x:Type ListBox}}">
                <Style.Setters>
                    <Setter Property="ItemsPanel">
                        <Setter.Value>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </Setter.Value>
                    </Setter>
                </Style.Setters>
            </Style>
            <Thickness x:Key="TableElementMargin">0 2 0 2</Thickness>
            <Thickness x:Key="SubSettingMargin">10 0 0 0</Thickness>
            <Visibility x:Key="Collapsed">Collapsed</Visibility>
        </Grid.Resources>

        <TextBlock Text="COM Port:" Grid.Row="0" Visibility="{Binding COMPortSelectorVisibility}"/>
        <ComboBox Grid.Row="0" Grid.Column="1" Margin="{StaticResource TableElementMargin}" IsEditable="True" ItemsSource="{Binding COMPorts}" 
                  SelectedItem="{Binding SelectedCOMPort}" Text="{Binding SelectedCOMPortText}" 
                  SelectionChanged="RaiseSettingsChangedEvent" Visibility="{Binding COMPortSelectorVisibility}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding}" Margin="0"/>
                        <TextBlock Text="{Binding Hint}" Margin="0" Opacity="0.5"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>


        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Margin="5 0 0 0" Grid.ColumnSpan="2">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ExternalCOMPortSelectionHint}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            <Image Width="16" Height="16" Source="icons\bulb16.png" VerticalAlignment="Center" Margin="0 2 5 0"/>
            <TextBlock VerticalAlignment="Center" Margin="0" Text="{Binding Path=ExternalCOMPortSelectionHint}"/>
        </StackPanel>
        <TextBlock Text="GDB Stub Baud Rate:" Grid.Row="2"/>
        <ComboBox Grid.Row="2" Grid.Column="1" Margin="{StaticResource TableElementMargin}" IsEditable="True" Text="{Binding Settings.StubBaudRate}" SelectionChanged="RaiseSettingsChangedEvent">
            <ComboBox.ItemsSource>
                <coll:ArrayList>
                    <sys:String>74880</sys:String>
                    <sys:String>115200</sys:String>
                </coll:ArrayList>
            </ComboBox.ItemsSource>
        </ComboBox>

        <TextBlock Text="Bootloader Baud Rate:" Grid.Row="3" Visibility="{Binding DirectFLASHProgrammingOptionVisibility}"/>
        <ComboBox Grid.Row="3" Grid.Column="2" Margin="{StaticResource TableElementMargin}" IsEditable="True" Text="{Binding Settings.BootloaderBaudRate}" SelectionChanged="RaiseSettingsChangedEvent" Visibility="{Binding DirectFLASHProgrammingOptionVisibility}">
            <ComboBox.ItemsSource>
                <coll:ArrayList>
                    <sys:String>115200</sys:String>
                </coll:ArrayList>
            </ComboBox.ItemsSource>
        </ComboBox>

        <TextBlock Text="Bootloader Reset Delay (msec):" Grid.Row="4" Visibility="{Binding DirectFLASHProgrammingOptionVisibility}"/>
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Settings.BootloaderResetDelay}" Margin="{StaticResource TableElementMargin}" TextChanged="RaiseSettingsChangedEvent" Visibility="{Binding DirectFLASHProgrammingOptionVisibility}"/>

        <TextBlock Text="Bootloader Activation Sequence:" Grid.Row="5" Visibility="{Binding DirectFLASHProgrammingOptionVisibility}"/>
        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Settings.BootloaderActivationSequence}" Margin="{StaticResource TableElementMargin}" TextChanged="RaiseSettingsChangedEvent" Visibility="{Binding DirectFLASHProgrammingOptionVisibility}"/>


        <TextBlock Text="Program FLASH memory:" Grid.Row="6"/>
        <ListBox Grid.Row="6" Grid.Column="1" SelectedItem="{Binding Settings.ProgramMode}" Margin="{StaticResource TableElementMargin}" SelectionChanged="RaiseSettingsChangedEvent">
            <ListBox.ItemsSource>
                <coll:ArrayList>
                    <bspe:ProgramMode>Enabled</bspe:ProgramMode>
                    <bspe:ProgramMode>Disabled</bspe:ProgramMode>
                    <bspe:ProgramMode>Auto</bspe:ProgramMode>
                </coll:ArrayList>
            </ListBox.ItemsSource>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding}" Value="Enabled">
                                        <Setter Property="Text" Value="Always"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding}" Value="Disabled">
                                        <Setter Property="Text" Value="Never"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding}" Value="Auto">
                                        <Setter Property="Text" Value="If rebuilt since last load"/>
                                    </DataTrigger>
                                </Style.Triggers>
                                <Setter Property="Foreground" Value="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:ESPxxOpenOCDSettingsControl}}"/>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBlock Text="FLASH Size:" Grid.Row="7" Visibility="{Binding DirectFLASHProgrammingOptionVisibility}"/>
        <ComboBox Grid.Row="7" Grid.Column="1" Margin="{StaticResource TableElementMargin}" ItemsSource="{x:Static local:Options.FLASHSizes}" 
                 SelectedItem="{Binding Settings.FLASHSettings.Size}" SelectionChanged="RaiseSettingsChangedEvent" ItemTemplate="{StaticResource AnnotatedItemTemplate}" Visibility="{Binding DirectFLASHProgrammingOptionVisibility}"/>

        <TextBlock Text="FLASH Mode:" Grid.Row="8" Visibility="{Binding DirectFLASHProgrammingOptionVisibility}"/>
        <ListBox Grid.Row="8" Grid.Column="1" Margin="{StaticResource TableElementMargin}" ItemsSource="{x:Static local:Options.FLASHModes}" 
                 SelectedItem="{Binding Settings.FLASHSettings.Mode}" SelectionChanged="RaiseSettingsChangedEvent" ItemTemplate="{StaticResource AnnotatedItemTemplate}" Visibility="{Binding DirectFLASHProgrammingOptionVisibility}"/>


        <TextBlock Text="FLASH Frequency:" Grid.Row="9" Visibility="{Binding DirectFLASHProgrammingOptionVisibility}"/>
        <ListBox Grid.Row="9" Grid.Column="1" Margin="{StaticResource TableElementMargin}" ItemsSource="{x:Static local:Options.FLASHFrequencies}" 
                 SelectedItem="{Binding Settings.FLASHSettings.Frequency}" SelectionChanged="RaiseSettingsChangedEvent" ItemTemplate="{StaticResource AnnotatedItemTemplate}" Visibility="{Binding DirectFLASHProgrammingOptionVisibility}"/>

        <CheckBox Grid.Row="10" Margin="5" Grid.ColumnSpan="2" VerticalContentAlignment="Center" IsChecked="{Binding Path=Settings.SuppressResetConfirmation}" Checked="RaiseSettingsChangedEvent" Unchecked="RaiseSettingsChangedEvent">
            <TextBlock Text="Suppress the 'Reset device into bootloader mode' prompt."/>
        </CheckBox>

        <Expander Grid.ColumnSpan="2" Grid.Row="13" Header="Additional FLASH resources to program" IsExpanded="False" Visibility="{Binding DirectFLASHProgrammingOptionVisibility}">
            <StackPanel Orientation="Vertical">
                <Border BorderThickness="1" BorderBrush="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:ESPxxOpenOCDSettingsControl}}" Margin="10">
                    <StackPanel Orientation="Vertical">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="24"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="File"/>
                            <TextBlock Text="Address" Grid.Column="2"/>
                        </Grid>
                        <ItemsControl ItemsSource="{Binding FLASHResources}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="24"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="24"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Text="{Binding Path}" Grid.Column="0" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" TextWrapping="Wrap"/>
                                        <Button Click="BrowseResource_Click" Grid.Column="1" Style="{DynamicResource VsDynamicButtonStyle}">
                                            <Image Width="16" Height="16" Source="icons/open16.png"/>
                                        </Button>
                                        <TextBox Text="{Binding Offset}" HorizontalAlignment="Stretch" Grid.Column="2" VerticalContentAlignment="Center" TextWrapping="Wrap"/>
                                        <Button Click="RemoveResource_Click" Grid.Column="3" Style="{DynamicResource VsDynamicButtonStyle}">
                                            <Image Width="16" Height="16" Source="icons/clear16.png"/>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
                <Button Style="{DynamicResource HyperlinkButton}" HorizontalAlignment="Left" Click="AddNewResource" Margin="10 0 0 10">
                    <StackPanel Orientation="Horizontal">
                        <Image Width="16" Height="16" Source="icons/add16.png"/>
                        <TextBlock Text="Add another resource" VerticalAlignment="Center" Margin="3"/>
                    </StackPanel>
                </Button>
                <Grid Margin="10 0 0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Initialization data file:"/>
                    <TextBox Text="{Binding InitDataFile}" Grid.Column="1" Margin="5 0 0 0" VerticalContentAlignment="Center" TextChanged="RaiseSettingsChangedEvent"/>
                </Grid>
            </StackPanel>
        </Expander>

    </Grid>

</UserControl>
